{
  "include": ["vite.config.ts"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ]
    },
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "types": ["@yandex/ymaps3-types"],
  }
}
